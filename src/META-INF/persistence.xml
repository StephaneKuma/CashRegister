<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="CashRegisterPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>dev.stekos.cashregister.models.User</class>
    <class>dev.stekos.cashregister.models.Product</class>
    <class>dev.stekos.cashregister.models.Category</class>
    <class>dev.stekos.cashregister.models.Invoice</class>
    <class>dev.stekos.cashregister.models.Supplier</class>
    <class>dev.stekos.cashregister.models.SubCategory</class>
    <class>dev.stekos.cashregister.models.Categoriy</class>
    <class>dev.stekos.cashregister.models.Sale</class>
    <class>dev.stekos.cashregister.models.Purchase</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cashregister?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
